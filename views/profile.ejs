<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - ShelterSeek</title>
    <link rel="stylesheet" href="/styles/sumukesh_traveler.css">
    <link rel="stylesheet" href="/styles/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- Navbar -->
    <%-include('partials/header')  %>
    <!-- Profile Section -->
    <div class="profile-container">
        <h1>Your Profile</h1>
        <div class="profile-info">
            <div class="profile-picture">
                <img src="/imgages/photo1.jpg" alt="Profile Picture" id="profile-pic">
                <button id="change-profile-pic">Change Picture</button>
            </div>
            <div class="profile-details">
                <div class="detail">
                    <label>Name:</label>
                    <span id="profile-name">Loading...</span>
                </div>
                <div class="detail">
                    <label>Email:</label>
                    <span id="profile-email">Loading...</span>
                </div>
                <div class="detail">
                    <label>Account Type:</label>
                    <span id="profile-account-type">Loading...</span>
                </div>
            </div>
        </div>

        <!-- Account Actions -->
        <div class="account-actions">
            <h2>Account Actions</h2>
            <button id="delete-account" class="danger-btn">Delete Account</button>
        </div>
    </div>

    <!-- Footer -->
    <script src="/scripts/sumukesh_traveler.js"></script>
    <script src="/scripts/profile.js"></script>
</body>
<footer>
    <%-include('partials/footer')  %>
</footer>
</html>